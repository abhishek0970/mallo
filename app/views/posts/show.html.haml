
	
#post_show
	%h1= @post.title
	%p.username
		Added by
		= @post.user.name
		/about
		= time_ago_in_words(@post.created_at)
	.clearfix
		.post_image_description
			= image_tag @post.image.url(:medium)
			.description= simple_format(@post.description)
		.post_data
			= link_to "Location of Dustbin", @post.link, class: "button"
			= link_to like_post_path(@post) , method: :get, class: "data" do
				%i.fa.fa-thumbs-o-up
				= pluralize(@post.get_upvotes.size, "Active")

			= link_to dislike_post_path(@post) , method: :get, class: "data" do
				%i.fa.fa-thumbs-o-down
				= pluralize(@post.get_downvotes.size, "Inactive")
			%p.data
				%i.fa.fa-comments-o
				= pluralize(@post.comments.count, "Comment")
			- if @post.user == current_user
				= link_to "Edit", edit_post_path(@post), class: "data"
				= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are You Sure?"}, class: "data"



#comments
	%h2.comment_count= pluralize(@post.comments.count, "Comment")
	- @comments.each do |comment|
		.well.well-sm
			.comment
				%p.username= comment.user.name
				%p.comment.content= comment.content

	= render "comments/form"
